@model DataModel

@{
    ViewData["Title"] = "Admin";
}

<script type="text/javascript">
    function DropCoin(data) {
        $("#display").text(data["Message"]);
        $("#amount").text(data["Amount"]);
        DisableButton(data);
    }

    function Success(data) {
        $("#display").text(data["Message"]);
        $("#amount").text(data["Amount"]);
        $("#" + data["Drink-Id"] + "-count").text(data["Drink-Count"]);
        DisableButton(data);
    }

    function GetChange(data) {
        $("#display").text(data["Message"]);
        $("#amount").text(data["Amount"]);
        DisableButton(data);
    }

    function DisableButton(data) {
        //console.log(data);

        var indexes = data["indexes"];
        var btnEnabled = data["enabled"];

        for (let i = 0; i < indexes.length; i++) {
            console.log("index " + i + " = " + indexes[i]);
            console.log("enabled " + i + " = " + btnEnabled[i]);
            document.getElementById(indexes[i]).disabled = btnEnabled[i];
        }
    }
</script>

<h1>Режим администратора</h1>

<form  asp-action="Save">
    <p>
        <a asp-action="Save">Сохранить изменения</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Монета</th>
                <th>Приём монеты</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Coins)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CoinId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Coin)
                    </td>
                    <td>
                        @Html.EditorFor(modelItem => item.Allow)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

<p>
    <a asp-action="Create">Добавить напиток</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Напиток</th>
            <th>Цена</th>
            <th>Количество</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Drinks) 
{
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.EditorFor(modelItem => item.Name)
            </td>
            <td>
                @Html.EditorFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.EditorFor(modelItem => item.Count)
            </td>
            <td>
